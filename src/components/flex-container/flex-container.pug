mixin card(title)
	.card
		h2= title
		.arrow
			svg(width="65" height="36" viewBox="0 0 65 36" fill="none" xmlns="http://www.w3.org/2000/svg")
				path(d="M58.4384 19.4L0 19.4L0 16.6L58.4384 16.6L58.4384 19.4ZM36.5378 36L34.8869 33.6L61.685 20L61.685 16L34.8869 2.4L36.5378 0L64.9316 14.4V21.6L36.5378 36Z" fill="#04306A")


mixin flex-container()
	section.flex-container
		h1
			strong Комплексные&nbsp;
			| предложения для мостостроения

		.upper
			+card('Мостовая сталь/Стальные конструкции мостов')
			.vertical
				+card('Железобетонные конструкции мостов')
				+card('Дорожные ограждения барьерного типа')

		.middle
			+card('Шпунтовой замок')
			+card('Мостовой крепеж')
			+card('Профили для деформационных швов')
			
		.lower
			+card('Плетеные габионы')
			+card('Модульные мосты')